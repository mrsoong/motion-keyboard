<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:alpha="0.7">

    <LinearLayout
        android:id="@+id/settings_area"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.7"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/settings_sensitivity_layout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/settings_sensitivity"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="11"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Sensitivity" />

            <ToggleButton
                android:id="@+id/settings_sensitivity_low"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/settings_sensitivity"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ToggleButton"
                android:textOff="Low"
                android:textOn="Low"
                android:background="@drawable/sensitivity_btn_toggle" />

            <ToggleButton
                android:id="@+id/settings_sensitivity_medium"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/settings_sensitivity_low"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="Medium"
                android:textOn="Medium"
                android:background="@drawable/sensitivity_btn_toggle" />

            <ToggleButton
                android:id="@+id/settings_sensitivity_high"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/settings_sensitivity_medium"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="High"
                android:textOn="High"
                android:background="@drawable/sensitivity_btn_toggle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/settings_ok"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:background="#D3D3D3"
                android:gravity="center"
                android:fontFamily="@string/keyFont"
                android:text="Ok"
                android:textColor="#000"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/settings_cancel"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="#D3D3D3"
                android:gravity="center"
                android:fontFamily="@string/keyFont"
                android:text="Cancel"
                android:textColor="#000"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/settings_default"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="#D3D3D3"
                android:gravity="center"
                android:fontFamily="@string/keyFont"
                android:text="Default"
                android:textColor="#000"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/settings_cursor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="o"
        android:textColor="@color/colorKeyboardCursor"
        android:gravity="center" />

</RelativeLayout>