<?xml version="1.0" encoding="utf-8"?>
<com.example.motionkey.SettingsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:alpha="0.7">

    <LinearLayout
        android:id="@+id/settings_area"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.7"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/settings_sensitivity_layout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<EditText-->
                <!--android:id="@+id/settings_sensitivity"-->
                <!--android:layout_width="90dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_weight="1"-->
                <!--android:ems="11"-->
                <!--android:inputType="none"-->
                <!--android:clickable="false"-->
                <!--android:cursorVisible="false"-->
                <!--android:focusable="false"-->
                <!--android:focusableInTouchMode="false"-->
                <!--android:text="Sensitivity" />-->
            <Button
                android:id="@+id/settings_sensitivity_low"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Low"
                android:textSize="@dimen/key_text_size"
                android:fontFamily="@string/keyFont"
                android:textColor="@color/colorKeyboardPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAllCaps="false"
                android:background="@color/colorKeyboardSuggestion"/>
            <Button
                android:id="@+id/settings_sensitivity_medium"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_toRightOf="@id/settings_sensitivity_low"
                android:text="Medium"
                android:textSize="@dimen/key_text_size"
                android:fontFamily="@string/keyFont"
                android:textColor="@color/colorKeyboardPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAllCaps="false"
                android:background="@color/colorKeyboardSuggestion"/>
            <Button
                android:id="@+id/settings_sensitivity_high"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_toRightOf="@id/settings_sensitivity_medium"
                android:text="High"
                android:textSize="@dimen/key_text_size"
                android:fontFamily="@string/keyFont"
                android:textColor="@color/colorKeyboardPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAllCaps="false"
                android:background="@color/colorKeyboardSuggestion"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings_ok"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="ok"
                android:textSize="@dimen/key_text_size"
                android:fontFamily="@string/keyFont"
                android:textColor="@color/colorKeyboardPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAllCaps="false"
                android:background="@color/colorKeyboardSuggestion"/>

            <Button
                android:id="@+id/settings_cancel"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="@dimen/key_text_size"
                android:fontFamily="@string/keyFont"
                android:textColor="@color/colorKeyboardPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAllCaps="false"
                android:background="@color/colorKeyboardSuggestion"/>

            <Button
                android:id="@+id/settings_default"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="default"
                android:textSize="@dimen/key_text_size"
                android:fontFamily="@string/keyFont"
                android:textColor="@color/colorKeyboardPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAllCaps="false"
                android:background="@color/colorKeyboardSuggestion"/>

           </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/settings_cursor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="o"
        android:textColor="@color/colorKeyboardCursor"
        android:gravity="center" />

</com.example.motionkey.SettingsView>